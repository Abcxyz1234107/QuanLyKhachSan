<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ThemeOverlay.App.TealPrimary"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget_App_BorderedContainer"
        android:padding="12dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết nhân viên"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Mã NV (không sửa) -->

        <!-- Tên -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.Teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên nhân viên"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDetailTenNhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- SĐT -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.Teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDetailSoDienThoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Chức vụ -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.Teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chức vụ"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDetailChucVu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Lương cơ bản -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.Teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lương cơ bản"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDetailLuongCoBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Lịch làm việc -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.Teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lịch làm việc"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDetailLichLamViec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ngày vào làm -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.App.TextInputLayout.Teal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày vào làm"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDetailNgayVaoLam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nút Lưu / Thoát -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetailExit"
                style="@style/Widget_App_FadeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thoát"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetailSave"
                style="@style/Widget_App_FadeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lưu"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
