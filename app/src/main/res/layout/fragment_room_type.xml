<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- ─────────── nhập tên + giá ─────────── -->

    <!-- ─────────── Thêm / Sửa / Xoá ─────────── -->
    <LinearLayout
        android:id="@+id/llInput"
        style="@style/Widget_App_BorderedContainer"
        android:layout_width="395dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Tên loại phòng -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            android:hint="@string/tenloaiphong">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtName"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Giá loại phòng -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPrice"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:hint="Giá loại phòng">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPrice"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llActions"
        style="@style/Widget_App_BorderedContainer"
        android:layout_width="395dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llInput"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnEdit"
            style="@style/Widget_App_PrimaryButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="-55dp"
            android:text="Sửa" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/Widget_App_PrimaryButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnDelete"
            style="@style/Widget_App_PrimaryButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="Xóa" />
    </LinearLayout>

    <!-- ─────────── Bộ lọc ─────────── -->
    <LinearLayout
        android:id="@+id/llFilter"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        style="@style/Widget_App_BorderedContainer"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llActions">

        <CheckBox
            android:id="@+id/cbFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Lọc" />

        <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/tilMin"
               android:layout_width="140dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="8dp"
               android:hint="Giá tối thiểu">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/tilMax"
               android:layout_width="140dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:hint="Giá tối đa">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edtMax"
                   android:layout_width="140dp"
                   android:layout_height="match_parent"
                   android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!-- ─────────── Tiêu đề ─────────── -->
    <LinearLayout
        android:id="@+id/llHeader"
        style="@style/Widget_App_BorderedContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/llFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvHeaderId"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mã loại phòng"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeaderName"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Tên loại phòng"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeaderPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giá"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ─────────── Danh sách loại phòng ─────────── -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRoomTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/llHeader"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp">
    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>
