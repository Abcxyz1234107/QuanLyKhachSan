<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SideNavIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:layout_marginStart">-7dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="SideNavLabel" parent="Widget.Material3.Button.TextButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SideNavItem" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/side_nav_item_bg</item>

        <!-- TẮT tô màu mặc định -->
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>

        <!-- hover / press -->
        <item name="rippleColor">@color/teal_400</item>

        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="Widget_App_PrimaryButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="elevation">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Widget_App_BorderedContainer">
        <item name="android:background">@drawable/bg_border_sides_bottom</item>
        <item name="android:padding">8dp</item>
    </style>

    <dimen name="side_nav_collapsed">64dp</dimen>
    <dimen name="side_nav_expanded">210dp</dimen>

    <style name="RoomTextWhiteBold" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="RoomTextWhiteNormal" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="RoomTextWhiteItalic" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Widget.App.TextInputLayout.Teal" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/teal_500</item>
        <item name="hintTextColor">@color/teal_500</item>
        <item name="colorControlActivated">@color/teal_500</item>
    </style>

    <style name="QuarterChartStyle">
        <item name="android:layout_width">193dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker.Spinner" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="@android:style/Widget.Holo.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="Widget_App_FadeButton" parent="Widget_App_PrimaryButton">
        <item name="android:background">@drawable/bg_primary_button_fade</item>
    </style>

    <style name="HotelInfoLine" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="widget_app_textinputedittext_teal_cursor" parent="">
        <item name="android:textCursorDrawable">@drawable/cursor_teal</item>
    </style>

    <style name="ThemeOverlay.App.TealPrimary" parent="">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryContainer">@color/teal_500</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

</resources>